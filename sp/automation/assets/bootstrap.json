{
	"name":"bootstrap-container",
	"phases":["create"],
	"description":"Bootstrap container template",
	"features":{
		"install":[
			"com.soa.platform.jetty",
			"com.soa.admin.console"
		]
	},
	"configurations":[
		{
			"pid":"system",
			"location":"${INSTALL_DIR}/config/container-system.properties",
			"add":{
				"org.osgi.service.http.port":"${DEFAULT_PORT|9900}",
				"com.soa.http.host":"${DEFAULT_HOST|0.0.0.0}",
				"container.name":"${CONTAINER_NAME}",
				"org.eclipse.jetty.servlet.SessionCookie":"JSESSIONID_${nospace:CONTAINER_NAME}"
			}
		},{
			"pid":"framework",
			"location":"${INSTALL_DIR}/config/container-config.properties",
			"add":{
				"product.home":"${url:INSTALL_DIR}",
				"product.home.dir":"${INSTALL_DIR}"			
			}
		},{
			"pid":"com.soa.log",
			"location":"${INSTALL_DIR}/config/log4j-template.properties"
		},{
			"pid":"com.soa.config",
			"add":{
				"container.administrator":"${CONTAINER_ADMIN|administrator}",
				"container.administrator.passwd":"${hash:CONTAINER_ADMIN_PASSWORD|password}",
				"container.creation.tm":"${now()}",
				"container.type":"standalone",
				"context.path":"${ROOT_CONTEXT|}",
				"container.name":"${CONTAINER_NAME}",
				"container.key":"${CONTAINER_KEY|uuid32()}",
				"product.home":"${url:INSTALL_DIR}",
				"product.home.dir":"${INSTALL_DIR}",
				"session.timeout":"${SESSION_TIMEOUT|3600}"				
			}
		}
	]
}